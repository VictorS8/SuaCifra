<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.add.AddFragment">

        <TextView
            android:id="@+id/addCifraToneTitleTextView"
            style="@style/settingsTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            android:text="@string/add_cifra_tone_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/addCifraToneBackImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            android:minHeight="@dimen/big_space"
            android:minWidth="@dimen/big_space"
            android:contentDescription="@string/go_back_button_text"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="?attr/backgroundColor"
            app:tint="?attr/colorPrimary" />

        <ImageButton
            android:id="@+id/addCifraToneNextImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            android:minHeight="@dimen/big_space"
            android:minWidth="@dimen/big_space"
            android:contentDescription="@string/save_cifra_singer_name_content_description_text"
            android:src="@drawable/baseline_arrow_forward_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="?attr/backgroundColor"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/addCifraToneStringTextView"
            style="@style/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_space"
            app:layout_constraintTop_toBottomOf="@id/addCifraToneTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>

<!--        TODO - Create titles for Notes, Major and Minor, Numbers -->
<!--        TODO - Create buttons to Notes, Major and Minor, Numbers -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>