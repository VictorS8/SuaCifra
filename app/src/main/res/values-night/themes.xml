<resources>
    <!-- Base application theme. -->
    <!--    Dark Mode-->
    <style name="themeSuaCifra" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimarySurface">@color/light_blue_with_transparency</item>
        <item name="colorPrimaryInverse">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">?attr/colorOnPrimary</item>
        <item name="colorOnBackground">@color/light_blue_with_more_transparency</item>

        <item name="colorControlNormal">?attr/colorPrimarySurface</item>
        <item name="colorControlActivated">?attr/colorPrimarySurface</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

    <style name="themeSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenIconBackgroundColor">?attr/colorSecondary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_foreground</item>
        <item name="postSplashScreenTheme">@style/themeSuaCifra</item>
    </style>

    <style name="baseAppStyle">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="appTitleStyle">
        <item name="android:textSize">@dimen/app_title_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="warningMessageStyle">
        <item name="android:textSize">@dimen/no_cifras_message_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">@dimen/warning_message_padding</item>
        <item name="android:paddingLeft">@dimen/warning_message_padding</item>
    </style>

    <style name="helperTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/helper_text_size</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="aboutTextViewStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">@dimen/about_text_padding</item>
        <item name="android:paddingLeft">@dimen/about_text_padding</item>
    </style>

    <style name="settingsTextViewStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="signInWithGoogleWarningTextViewStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editTextStyle">
        <item name="android:minHeight">@dimen/min_height_touch_size</item>
        <item name="android:minWidth">240dp</item>
        <item name="android:textColorHint">?attr/colorPrimarySurface</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textCursorDrawable">?attr/colorPrimarySurface</item>
        <item name="android:textColorHighlight">?attr/colorPrimarySurface</item>
        <item name="android:background">@drawable/custom_input</item>
    </style>

    <style name="editTextProfileNameStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPersonName|textCapSentences</item>
        <item name="android:textColorHint">?attr/colorPrimarySurface</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textCursorDrawable">?attr/colorPrimarySurface</item>
        <item name="android:textColorHighlight">?attr/colorPrimarySurface</item>
        <item name="android:backgroundTint">@color/transparency</item>
        <item name="android:minHeight">@dimen/min_height_touch_size</item>
    </style>

    <style name="bottomNavigationStyle">
        <item name="android:elevation">@dimen/large_space</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemIconSize">@dimen/bottom_navigation_icon_size</item>
        <item name="itemRippleColor">?attr/colorPrimaryInverse</item>
        <item name="itemTextColor">@drawable/bottom_navigation_icon_color_selector</item>
        <item name="itemIconTint">@drawable/bottom_navigation_icon_color_selector</item>
        <item name="itemTextAppearanceActive">?attr/colorPrimaryInverse</item>
    </style>

    <style name="chooseToneButton">
        <item name="android:elevation">@dimen/large_space</item>
        <item name="android:layout_margin">@dimen/minimal_space</item>
        <item name="android:padding">@dimen/minimal_space</item>
        <item name="android:background">@drawable/custom_tone_button</item>
        <item name="android:clickable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/choose_tone_text_size</item>
    </style>

    <style name="defaultButton">
        <item name="android:elevation">@dimen/large_space</item>
    </style>

    <style name="profilePictureStyle">
        <item name="android:minWidth">@dimen/profile_picture_size</item>
        <item name="android:elevation">@dimen/large_space</item>
        <item name="android:minHeight">@dimen/profile_picture_size</item>
        <item name="android:background">@drawable/custom_profile_picture</item>
    </style>

    <style name="buttonOnSettingsStyle">
        <item name="android:elevation">@dimen/large_space</item>
        <item name="android:minHeight">@dimen/min_height_settings_button_size</item>
        <item name="android:minWidth">@dimen/min_width_settings_button_size</item>
    </style>
</resources>
